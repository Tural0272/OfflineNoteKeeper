modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HTTP Server"

[[workflows.workflow]]
name = "HTTP Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx http-server . -p 3001 -c-1 --cors"
waitForPort = 3001

[deployment]
run = ["sh", "-c", "npx http-server . -p 3001 -c-1 --cors"]

[[ports]]
localPort = 3001
externalPort = 80
